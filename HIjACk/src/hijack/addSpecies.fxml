<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER_RIGHT" spacing="10.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="speciesName" promptText="Species name">
         <font>
            <Font name="Monospaced Regular" size="13.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </TextField>
      <ButtonBar buttonMinWidth="50.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button cancelButton="true" mnemonicParsing="false" text="Cancel">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Monospaced Regular" size="13.0" />
               </font>
            </Button>
            <Button defaultButton="true" layoutX="50.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAddNewSpecies" text="Add">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Monospaced Regular" size="13.0" />
               </font>
            </Button>
        </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
   </padding>
</VBox>
